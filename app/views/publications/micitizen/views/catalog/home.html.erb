<div class="home container-fluid">
    <div class="head head-micitizen col-md-12">
      <!-- <h1>The Michigan Citizen</h1> -->
      <h1><%= image_tag("The-Michigan-Citizen-Digital-Archive-Header.png", :width => 800, :alt => "", :class => 'masthead-micitizen') %><span class="sr-only">Michigan Citizen </span>
        <span class="subtitle"><%= t('views.micitizen-static.home.head.page_title') %></span>
      </h1>
      <p class="description1"><%= fill_publication_details(t('views.micitizen-static.home.head.subtitle1')) %></p>
      <p class="description2"></p>
      <p class="description3">&nbsp;</p>
      <a href="/<%= "#{@publication['slug']}" %>/about"><%= t('views.micitizen-static.home.head.link') %></a>
      <% if true %><%= render partial: "search_form", locals: { container_class: 'container' } %><% end %>
      <!-- <p class="description4"><%= t('views.micitizen-static.home.head.description3') %></p> -->
    </div>
</div>
<div class="home container-fluid">
  <div class="partnerships col-md-12">
    <p>In Partnership With</p>
    <ol class="partnerships-list">
      <% if false %>
      <li><%= link_to(image_tag("DJNews-Archive-Logo.png", :alt => "The Detroit Jewish News"), 'https://thejewishnews.com/', class: 'djnews-logo') %></li>
      <li><%= link_to(image_tag("DJNfoundation-logo.png", :alt => "Detroit Jewish News Foundation"), 'https://djnfoundation.org', class: 'djnews-foundation-logo') %></li>
      <% end %>
      <li><%= link_to(image_tag("u-m_library_logo.png", :alt => "University of Michigan Library"), 'https://lib.umich.edu', class: 'mlibrary-logo') %></li>
      <li><%= link_to(image_tag("bentley_historical_library_logo.png", :alt => "Bentley Historical Library"), 'http://bentley.umich.edu/', class: 'bentley-logo') %></li>
    </ol>
  </div>
</div>
<div class="home container-fluid">
    <div class="featured col-md-12">
      <h2 class="featured-title"><%= t('views.micitizen-static.home.today.title') %></h2>
      <p class="description"><%= @featured_list.first["date_issued_display"].first.split(",").first if @featured_list.first %></p>
      <div id="documents" class="row grid">
        <% @featured_list.each do |document| %>
          <a href="<%= url_for url_for_document(document) %>" style="display: block;">
              <figure data-identifier="<%= document.id %>">
                  <div class="thumbnail" style=" <%= document_thumbnail_style(document, size: '256,') %>">
                    <%= document_thumbnail(document, size: '256,') %>
                  </div>
                  <figcaption>
                    <%= document.fetch(:date_issued_display).first %>
                  </figcaption>
              </figure>
          </a>
        <% end %>
      </div>
      <%= link_to t('views.micitizen-static.home.today.link'), browse_path(date_issued_mm_ti: @now.strftime("%-m"), date_issued_dd_ti: @now.strftime("%-d")), class: 'btn btn-default btn-squared' %>
    </div>
</div>

