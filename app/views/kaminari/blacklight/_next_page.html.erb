<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<li class="page-item">
<%=
    link_opts = { class: 'btn btn-page-navigation' }
    link_to_unless current_page.last?, raw(t('views.pagination.next')) + " " + use_icon('next'), url, link_opts do
      content_tag :span, use_icon('next') + " " + raw(t('views.pagination.next')), :class => 'btn btn-page-navigation endpoint'
    end
%>
</li>