<%# Link to the "Previous" page
  - available local variables
    url:           url to the previous page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<li class="page-item">
<%=
    link_opts = { class: 'btn btn-page-navigation' }
    link_to_unless current_page.first?, use_icon('previous') + " " + raw(t('views.pagination.previous')), url, link_opts do
      content_tag :span, use_icon('previous') + " " + raw(t('views.pagination.previous')), :class => 'btn btn-page-navigation endpoint'
    end
%>
</li>