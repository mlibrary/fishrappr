<%= replace :head do %>
  <%= link_to_repository %>
<% end %>


<div id="sidebar" class="<%= sidebar_classes %>">
  <%= render 'constraints' %>
  <%= render 'search_graph' %>
  <%= render 'search_sidebar' %>
</div>

<div id="content" class="<%= main_content_classes %> activate-highlighting">
  <% unless has_search_parameters? %>
    <%# if there are no input/search related params, display the "home" partial -%>
    <%= render 'home' %>
    <%= render 'shared/sitelinks_search_box' %>
  <% else %>
    <%= render 'search_results' %>
  <% end %>
</div>
<%= render partial: 'back_to_top' %>


<script>
  if ( window.location.href.indexOf("noskip=1") < 0 ) {
    $(".row-article-text p").each(function() {
      $(this).shave(150);
    })
    //$(".row-article-text p").shave(150);
  }
</script>