<% if show_pagination? and @response.total_pages > 1 %>
 <div class="row record-padding">
  <div class="col-md-12">
    <div class="pagination pull-right">
      <!-- outer_window: 2 -->
      <%= paginate @response, left: 1,  right: 1, inner_window: 2, :theme => 'blacklight' %>
    </div>
  </div>
 </div>
<% end %>
