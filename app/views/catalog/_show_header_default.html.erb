<h3>
    <%= issue_title(document, true) %>
    - 
     Image <%= current_image_sequence(document) %>
</h3>
<dl class="dl-horizontal">
    <dt>Resource type:</dt>
    <dd>Text</dd>
    <dt>Publication:</dt>
    <dd><%= document.fetch('publication_label') %></dd>
    <% if document.fetch('page_no_t', []).first %>
    <dt>Page Number:</dt>
    <dd><%= document.fetch('page_no_t').first %></dd>
    <% end %>
    <!-- <dt>Division:</dt>
    <dd>Bentley Historical Library</dd> -->
    <% if document.fetch('page_label', nil) == 'tabloid' %>
    <dt>Note:</dt>
    <dd><span class="label label-note">This is a <a href="<%= static_path('using_page_viewer') %>#tabloid-pages" target="_blank">tabloid page</a></dd></dd>
    <% end %>
</dl>
<hr />