<% # container for a single doc -%>
<article class="row document" data-words="<%= process_highlighted_words(document) %>" data-identifier="<%= iiif_identifier(document, 'coordinates_link') %>">
    <span class="row-thumbnail" aria-hidden="true" tabindex="-1">
        <%= link_to document_thumbnail(document, size: '150,', async: true), url_for_document(document), { tabindex: '-1', class: 'thumbnail loading' , **(document_thumbnail_data(document, size: '150,')) } %>
    </span>
    <div class="row-article-text">
        <% if Settings.debug_score %>
        <div style="float: right"><%= document.fetch('score') %></div>
        <% end %>
        <%= render partial: 'index_default.html', locals: { document: document } %>
    </div>

</article>
    