<div class="navbar-right">
  <ul class="nav navbar-nav">
    <%= render_nav_actions do |config, action|%>
      <li><%= action %></li>
    <% end %>

    <% if has_user_authentication_provider? %>
      <% if current_user %>
        <li>
          <% link_text = t('blacklight.header_links.logout') + " (#{current_user})" %>
          <%= link_to link_text, destroy_user_session_path %>
        </li>
      <% else %>
        <li>
          <%= link_to t('blacklight.header_links.login'), {:controller => "sessions", :action => "login_info"} %>
        </li>
      <% end %>
    <% end %>

  </ul>

<!-- Reinstated login/logout/registration links 13June2017 GML -->
  <% if false && has_user_authentication_provider? %>
    <ul class="nav navbar-nav">
      <% if current_user %>
      <li>
        <%= link_to t('blacklight.header_links.logout'), destroy_user_session_path %>
        <span><%= current_user %></span>
      </li>
      <% if false %>
      <% unless current_user.to_s.blank? -%>
      <li>
        <%= link_to current_user, edit_user_registration_path %>
      </li>
      <% end %>
      <% end %>
      <% else %>
      <li>
        <%= link_to t('blacklight.header_links.login'), {:controller => "sessions", :action => "login_info"} %>
      </li>
      <% end %>
      </ul>
  <% end %>
  
</div>
